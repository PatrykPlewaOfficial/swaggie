{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "newLine": "lf",
    "noEmit": true,
    "skipLibCheck": true
